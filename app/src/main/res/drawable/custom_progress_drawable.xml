<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="3000"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="1080">

    <shape
        android:shape="ring"
        android:thickness="3dp"
        android:useLevel="false" >

        <size
            android:height="48dp"
            android:width="48dp"/>

        <gradient
            android:centerColor="@color/progress_bar_color1"
            android:centerY="0.5"
            android:endColor="@color/progress_bar_color2"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>
